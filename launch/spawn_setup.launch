<?xml version="1.0"?>
<launch>
    <arg name="world_name" default="worlds/empty.world"/>

    <!-- spawn args -->
    <arg name="robot_namespace" default="/"/>
    <arg name="x" default="0.0"/>
    <arg name="y" default="0.0"/>
    <arg name="z" default="0.0"/>

    <!-- Gazebo world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)"/>
        <arg name="verbose" value="true"/>
        <arg name="paused" value="true"/>
    </include>

    <!-- Spawn model -->
    <group ns="$(arg robot_namespace)">

        <param name="calib_setup_description" command="$(find xacro)/xacro
        '$(find ocam-calibration)/urdf/setup.urdf.xacro' --inorder robot_namespace:=$(arg robot_namespace)"/>

        <node name="spawn_calib_setup_model" pkg="gazebo_ros" type="spawn_model" output="screen"
              args="-x $(arg x) -y $(arg y) -z $(arg z)
              -unpause -urdf -param $(arg robot_namespace)/calib_setup_description -model calib_setup"/>
    </group>

</launch>